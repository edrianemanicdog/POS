<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/24.0.1" fx:controller="controller.ProductBundleController">

    <VBox spacing="15" AnchorPane.topAnchor="10" AnchorPane.leftAnchor="10" AnchorPane.rightAnchor="10" AnchorPane.bottomAnchor="10">

        <Label style="-fx-font-size: 22px; -fx-font-weight: bold;" text="Product Bundle Management"/>

        <GridPane hgap="15" vgap="10">
            <Label text="Bundle Product:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
            <ComboBox fx:id="cbBundleProduct" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

            <Label text="Item Product:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
            <ComboBox fx:id="cbItemProduct" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

            <Label text="Quantity:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
            <TextField fx:id="txtQuantity" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
        </GridPane>

        <HBox spacing="15" alignment="CENTER_LEFT">
            <Button text="Add" onAction="#addBundle" prefWidth="100"/>
            <Button text="Update" onAction="#updateBundle" prefWidth="100"/>
            <Button text="Delete" onAction="#deleteBundle" prefWidth="100"/>
            <Button text="Clear" onAction="#clearForm" prefWidth="100"/>
        </HBox>

        <TableView fx:id="tableBundles" prefHeight="400" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="colId" text="ID" prefWidth="50"/>
                <TableColumn fx:id="colBundleProduct" text="Bundle Product" prefWidth="150"/>
                <TableColumn fx:id="colItemProduct" text="Item Product" prefWidth="150"/>
                <TableColumn fx:id="colQuantity" text="Quantity" prefWidth="80"/>
            </columns>
        </TableView>

    </VBox>

</AnchorPane>
