<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/24.0.1" fx:controller="controller.ProductModifierOptionController">

    <VBox spacing="15" AnchorPane.topAnchor="10" AnchorPane.leftAnchor="10" AnchorPane.rightAnchor="10" AnchorPane.bottomAnchor="10">

        <Label style="-fx-font-size: 22px; -fx-font-weight: bold;" text="Modifier Option Management"/>

        <GridPane hgap="15" vgap="10">
            <Label text="Modifier:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
            <ComboBox fx:id="cbModifier" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

            <Label text="Name:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
            <TextField fx:id="txtName" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

            <Label text="Price:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
            <TextField fx:id="txtPrice" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
        </GridPane>

        <HBox spacing="15" alignment="CENTER_LEFT">
            <Button text="Add" onAction="#addOption" prefWidth="100"/>
            <Button text="Update" onAction="#updateOption" prefWidth="100"/>
            <Button text="Delete" onAction="#deleteOption" prefWidth="100"/>
            <Button text="Clear" onAction="#clearForm" prefWidth="100"/>
        </HBox>

        <TableView fx:id="tableOptions" prefHeight="400" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="colId" text="ID" prefWidth="50"/>
                <TableColumn fx:id="colModifier" text="Modifier" prefWidth="150"/>
                <TableColumn fx:id="colName" text="Name" prefWidth="150"/>
                <TableColumn fx:id="colPrice" text="Price" prefWidth="80"/>
            </columns>
        </TableView>

    </VBox>

</AnchorPane>
