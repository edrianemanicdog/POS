<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane fx:controller="controller.RegisterController"
            xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1"
            prefWidth="800" prefHeight="600">

    <!-- Full window background -->
    <Pane style="-fx-background-color: linear-gradient(to bottom right, #99e6f9, #3399d9);" 
          AnchorPane.topAnchor="0" AnchorPane.bottomAnchor="0"
          AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" />

    <!-- Centered register form -->
    <StackPane AnchorPane.topAnchor="0" AnchorPane.bottomAnchor="0"
               AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0">
        <VBox fx:id="mainVBox" spacing="25" alignment="CENTER" prefWidth="400" maxWidth="400">
        
        <Label text="REGISTER" style="-fx-font-size:36px; -fx-font-weight:bold; -fx-text-fill:#0d5c67;" />

        <TextField fx:id="emailField" promptText="Email"
                   style="-fx-background-radius:25; -fx-border-radius:25; -fx-background-color: rgba(255,255,255,0.8); 
                          -fx-border-color:#4ab1c0; -fx-border-width:1.5; -fx-font-size:18px; -fx-text-fill:#084a57;"/>

        <PasswordField fx:id="passwordField" promptText="Password"
                       style="-fx-background-radius:25; -fx-border-radius:25; -fx-background-color: rgba(255,255,255,0.8); 
                              -fx-border-color:#4ab1c0; -fx-border-width:1.5; -fx-font-size:18px; -fx-text-fill:#084a57;"/>
        
        <PasswordField fx:id="confirmPasswordField" promptText="Confirm Password"
                       style="-fx-background-radius:25; -fx-border-radius:25; -fx-background-color: rgba(255,255,255,0.8); 
                              -fx-border-color:#4ab1c0; -fx-border-width:1.5; -fx-font-size:18px; -fx-text-fill:#084a57;"/>

        <HBox spacing="5" alignment="CENTER">
            <Label text="Already have an account?" style="-fx-font-size:16px; -fx-text-fill:#0d5c67;"/>
            <Hyperlink text="Sign in" onAction="#goToLogin" style="-fx-font-size:16px; -fx-text-fill:#0077cc;"/>
        </HBox>

        <Button text="REGISTER" onAction="#registerUser"
                style="-fx-background-color: linear-gradient(to right,#56d1d8,#3fa4c4); 
                       -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius:25; 
                       -fx-font-size:18px; -fx-padding:15 60 15 60;" />
        </VBox>
    </StackPane>
</AnchorPane>
