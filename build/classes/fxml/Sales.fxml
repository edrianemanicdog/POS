<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<AnchorPane xmlns:fx="http://javafx.com/fxml/1"
            xmlns="http://javafx.com/javafx/24.0.1"
            fx:controller="controller.SalesController">
    
    <VBox spacing="15" style="-fx-padding: 20;" 
          AnchorPane.topAnchor="0" AnchorPane.bottomAnchor="0" 
          AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0">
        
        <Label text="Sales Records" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #0d5c67;" />
        
        <!-- Search and Filter Section -->
        <HBox spacing="10" alignment="CENTER_LEFT">
            <TextField fx:id="searchField" promptText="Search by cashier email..." prefWidth="250"
                       style="-fx-background-radius: 5; -fx-padding: 8;" />
            <Button text="Search" onAction="#searchSales"
                    style="-fx-background-color: #3399d9; -fx-text-fill: white; -fx-background-radius: 5; -fx-padding: 8 20;" />
            <Button text="Clear" onAction="#clearSearch"
                    style="-fx-background-color: #95a5a6; -fx-text-fill: white; -fx-background-radius: 5; -fx-padding: 8 20;" />
            <Region HBox.hgrow="ALWAYS" />
            <Button text="Refresh" onAction="#loadSales"
                    style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-background-radius: 5; -fx-padding: 8 20;" />
        </HBox>
        
        <!-- Sales Table -->
        <TableView fx:id="salesTable" VBox.vgrow="ALWAYS" prefHeight="400">
            <columns>
                <TableColumn fx:id="colSaleId" text="Sale ID" prefWidth="80" />
                <TableColumn fx:id="colSaleDate" text="Date &amp; Time" prefWidth="180" />
                <TableColumn fx:id="colTotalAmount" text="Total Amount" prefWidth="120" />
                <TableColumn fx:id="colTotalItems" text="Items" prefWidth="80" />
                <TableColumn fx:id="colCashier" text="Cashier" prefWidth="200" />
            </columns>
        </TableView>
        
        <!-- Summary Section -->
        <HBox spacing="20" style="-fx-background-color: #f0f0f0; -fx-background-radius: 5; -fx-padding: 15;">
            <VBox spacing="5">
                <Label text="Total Sales:" style="-fx-font-size: 14px; -fx-text-fill: #7f8c8d;" />
                <Label fx:id="totalSalesLabel" text="0" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" />
            </VBox>
            <VBox spacing="5">
                <Label text="Total Revenue:" style="-fx-font-size: 14px; -fx-text-fill: #7f8c8d;" />
                <Label fx:id="totalRevenueLabel" text="â‚±0.00" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #27ae60;" />
            </VBox>
            <VBox spacing="5">
                <Label text="Total Items Sold:" style="-fx-font-size: 14px; -fx-text-fill: #7f8c8d;" />
                <Label fx:id="totalItemsSoldLabel" text="0" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" />
            </VBox>
        </HBox>
    </VBox>
</AnchorPane>

