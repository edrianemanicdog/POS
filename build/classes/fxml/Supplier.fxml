<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/24.0.1" fx:controller="controller.SupplierController">

    <VBox spacing="15" AnchorPane.topAnchor="10" AnchorPane.leftAnchor="10" AnchorPane.rightAnchor="10" AnchorPane.bottomAnchor="10">

        <!-- Form Section -->
        <VBox spacing="10">
            <Label style="-fx-font-size: 22px; -fx-font-weight: bold;" text="Supplier Management"/>

            <GridPane hgap="15" vgap="10">
                <Label text="Name:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                <TextField fx:id="txtName" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                <Label text="Email:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                <TextField fx:id="txtEmail" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                <Label text="Phone:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                <TextField fx:id="txtPhone" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

                <Label text="Address:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                <TextField fx:id="txtAddress" GridPane.rowIndex="3" GridPane.columnIndex="1"/>
            </GridPane>

            <HBox spacing="15" alignment="CENTER_LEFT">
                <Button text="Add" onAction="#addSupplier" prefWidth="100"/>
                <Button text="Update" onAction="#updateSupplier" prefWidth="100"/>
                <Button text="Delete" onAction="#deleteSupplier" prefWidth="100"/>
                <Button text="Clear" onAction="#clearForm" prefWidth="100"/>
            </HBox>
        </VBox>

        <!-- Table Section -->
        <TableView fx:id="tableSuppliers" prefHeight="400" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="colId" text="ID" prefWidth="50"/>
                <TableColumn fx:id="colName" text="Name" prefWidth="150"/>
                <TableColumn fx:id="colEmail" text="Email" prefWidth="150"/>
                <TableColumn fx:id="colPhone" text="Phone" prefWidth="100"/>
                <TableColumn fx:id="colAddress" text="Address" prefWidth="200"/>
            </columns>
        </TableView>
    </VBox>

</AnchorPane>
