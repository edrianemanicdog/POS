<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/24.0.1" fx:controller="controller.CategoryController">

    <VBox spacing="15" AnchorPane.topAnchor="10" AnchorPane.leftAnchor="10" AnchorPane.rightAnchor="10" AnchorPane.bottomAnchor="10">

        <!-- Form Section -->
        <VBox spacing="10">
            <Label style="-fx-font-size: 22px; -fx-font-weight: bold;" text="Category Management"/>

            <HBox spacing="15" alignment="CENTER_LEFT">
                <Label text="Name:"/>
                <TextField fx:id="txtName" prefWidth="250"/>
            </HBox>

            <HBox spacing="15" alignment="CENTER_LEFT">
                <Button text="Add" onAction="#addCategory" prefWidth="100"/>
                <Button text="Update" onAction="#updateCategory" prefWidth="100"/>
                <Button text="Delete" onAction="#deleteCategory" prefWidth="100"/>
                <Button text="Clear" onAction="#clearForm" prefWidth="100"/>
            </HBox>
        </VBox>

        <!-- Table Section -->
        <TableView fx:id="tableCategories" prefHeight="400" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="colId" text="ID" prefWidth="50"/>
                <TableColumn fx:id="colName" text="Name" prefWidth="250"/>
            </columns>
        </TableView>
    </VBox>

</AnchorPane>
