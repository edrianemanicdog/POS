<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<AnchorPane fx:controller="controller.POSController"
            xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1"
            AnchorPane.topAnchor="0" AnchorPane.bottomAnchor="0"
            AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0"
            style="-fx-background-color: #f8f9fa;">
    
    <ScrollPane fitToWidth="true" fitToHeight="true"
                hbarPolicy="NEVER" vbarPolicy="AS_NEEDED"
                AnchorPane.topAnchor="0" AnchorPane.bottomAnchor="0"
                AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0">
        <content>
            <VBox spacing="0">
        
                <HBox style="-fx-background-color: linear-gradient(to right, #2c3e50, #34495e); -fx-padding: 20; -fx-alignment: center-left;">
                    <VBox spacing="5">
                        <Label text="Point of Sale" style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: white;" />
                        <Label fx:id="cartItemCountLabel" text="Cart: 0 items" 
                               style="-fx-font-size: 14px; -fx-text-fill: rgba(255,255,255,0.9);" />
                    </VBox>
                    <Region HBox.hgrow="ALWAYS" />
                    <VBox alignment="CENTER_RIGHT" spacing="5">
                        <Label fx:id="headerTotalLabel" text="â‚±0.00" 
                               style="-fx-font-size: 32px; -fx-font-weight: bold; -fx-text-fill: #27ae60;" />
                        <Label text="Total Amount" style="-fx-font-size: 12px; -fx-text-fill: rgba(255,255,255,0.8);" />
                    </VBox>
                </HBox>
                
                <HBox spacing="20" style="-fx-padding: 20;" VBox.vgrow="ALWAYS">
                    
                    <VBox spacing="15" prefWidth="700" VBox.vgrow="ALWAYS">
                        
                        <HBox spacing="10" alignment="CENTER_LEFT" 
                              style="-fx-background-color: white; -fx-background-radius: 8; -fx-padding: 15; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 5, 0, 0, 2);">
                            <Label text="ðŸ“¦ Products" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" />
                            <Region HBox.hgrow="ALWAYS" />
                            <Label fx:id="productCountLabel" text="Products: 0" 
                                   style="-fx-font-size: 14px; -fx-text-fill: #7f8c8d; -fx-font-weight: bold;" />
                        </HBox>
                        
                        <HBox spacing="10" alignment="CENTER_LEFT"
                              style="-fx-background-color: white; -fx-background-radius: 8; -fx-padding: 15; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 5, 0, 0, 2);">
                            <TextField fx:id="searchField" promptText="ðŸ” Search products by name, SKU, or description..." 
                                       prefWidth="400" prefHeight="40"
                                       style="-fx-background-radius: 20; -fx-border-radius: 20; -fx-background-color: #f8f9fa; 
                                              -fx-border-color: #dee2e6; -fx-border-width: 1.5; -fx-font-size: 14px; 
                                              -fx-padding: 10 20;" />
                            <Button text="Search" onAction="#searchProducts" prefHeight="40"
                                    style="-fx-background-color: linear-gradient(to right, #3498db, #2980b9); -fx-text-fill: white; 
                                           -fx-background-radius: 20; -fx-font-size: 14px; -fx-font-weight: bold; -fx-padding: 10 25;
                                           -fx-cursor: hand; -fx-effect: dropshadow(gaussian, rgba(52,152,219,0.3), 5, 0, 0, 2);" />
                            <Button text="Clear" onAction="#clearSearch" prefHeight="40"
                                    style="-fx-background-color: #95a5a6; -fx-text-fill: white; 
                                           -fx-background-radius: 20; -fx-font-size: 14px; -fx-padding: 10 20;
                                           -fx-cursor: hand;" />
                        </HBox>

                        <VBox spacing="8" style="-fx-background-color: white; -fx-background-radius: 8; -fx-padding: 15; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 5, 0, 0, 2);">
                            <Label text="Filter by Category" style="-fx-font-size: 13px; -fx-font-weight: bold; -fx-text-fill: #7f8c8d;" />
                            
                            <ScrollPane vbarPolicy="NEVER" hbarPolicy="AS_NEEDED" minHeight="65"
                                        style="-fx-background-color: transparent; -fx-background: transparent; -fx-padding: 0;">
                                <content>
                                    <HBox fx:id="categoryBar" spacing="12" alignment="CENTER_LEFT" 
                                          style="-fx-padding: 5 5 15 5;">
                                        </HBox>
                                </content>
                            </ScrollPane>
                        </VBox>

                        <VBox VBox.vgrow="ALWAYS"
                              style="-fx-background-color: white; -fx-background-radius: 8; -fx-padding: 10; 
                                     -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 5, 0, 0, 2);">
                            <TableView fx:id="productTable" VBox.vgrow="ALWAYS" style="-fx-background-color: transparent;">
                                <columns>
                                    <TableColumn fx:id="colProductId" text="ID" prefWidth="60" style="-fx-font-size: 13px;" />
                                    <TableColumn fx:id="colProductName" text="Product Name" prefWidth="250" style="-fx-font-size: 13px;" />
                                    <TableColumn fx:id="colProductPrice" text="Price" prefWidth="120" style="-fx-font-size: 13px;" />
                                    <TableColumn fx:id="colProductStock" text="Stock" prefWidth="100" style="-fx-font-size: 13px;" />
                                    <TableColumn fx:id="colProductCategory" text="Category" prefWidth="150" style="-fx-font-size: 13px;" />
                                </columns>
                                <placeholder>
                                    <VBox alignment="CENTER" spacing="10" style="-fx-padding: 40;">
                                        <Label text="ðŸ“¦" style="-fx-font-size: 48px;" />
                                        <Label text="No products found" style="-fx-text-fill: #95a5a6; -fx-font-size: 16px;" />
                                    </VBox>
                                </placeholder>
                            </TableView>
                        </VBox>
                    </VBox>

                    <VBox spacing="15" prefWidth="500" VBox.vgrow="ALWAYS">
                        
                        <HBox alignment="CENTER_LEFT" spacing="10"
                              style="-fx-background-color: white; -fx-background-radius: 8; -fx-padding: 15; 
                                     -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 5, 0, 0, 2);">
                            <Label text="ðŸ›’ Shopping Cart" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" />
                        </HBox>
                        
                        <VBox VBox.vgrow="ALWAYS"
                              style="-fx-background-color: white; -fx-background-radius: 8; -fx-padding: 10; 
                                     -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 5, 0, 0, 2);">
                            <TableView fx:id="cartTable" VBox.vgrow="ALWAYS" style="-fx-background-color: transparent;">
                                <columns>
                                    <TableColumn fx:id="colCartProduct" text="Product" prefWidth="180" style="-fx-font-size: 13px;" />
                                    <TableColumn fx:id="colCartPrice" text="Price" prefWidth="90" style="-fx-font-size: 13px;" />
                                    <TableColumn fx:id="colCartQuantity" text="Qty" prefWidth="120" style="-fx-font-size: 13px;" />
                                    <TableColumn fx:id="colCartSubtotal" text="Subtotal" prefWidth="90" style="-fx-font-size: 13px;" />
                                </columns>
                                <placeholder>
                                    <VBox alignment="CENTER" spacing="10" style="-fx-padding: 40;">
                                        <Label text="ðŸ›’" style="-fx-font-size: 48px;" />
                                        <Label text="Cart is empty" style="-fx-text-fill: #95a5a6; -fx-font-size: 16px; -fx-font-weight: bold;" />
                                        <Label text="Add products to get started!" style="-fx-text-fill: #bdc3c7; -fx-font-size: 14px;" />
                                    </VBox>
                                </placeholder>
                            </TableView>
                        </VBox>

                        <VBox spacing="12" 
                              style="-fx-background-color: #f8f9fa; -fx-border-color: #2c3e50; -fx-border-width: 2; 
                                     -fx-background-radius: 12; -fx-border-radius: 12; -fx-padding: 20; 
                                     -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.15), 10, 0, 0, 4);">
                            <Label text="ORDER SUMMARY" style="-fx-font-size: 13px; -fx-font-weight: bold; -fx-text-fill: #2c3e50; -fx-letter-spacing: 2px;" />
                            
                            <HBox alignment="CENTER_LEFT">
                                <Label text="Items:" style="-fx-font-size: 16px; -fx-text-fill: #34495e;" />
                                <Region HBox.hgrow="ALWAYS" />
                                <Label fx:id="totalItemsLabel" text="0" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" />
                            </HBox>
                            
                            <Separator style="-fx-background-color: #bdc3c7;" />
                            
                            <HBox alignment="CENTER_LEFT" spacing="8">
                                <Label text="Discount (%):" style="-fx-font-size: 16px; -fx-text-fill: #34495e;" />
                                <Region HBox.hgrow="ALWAYS" />
                                <TextField fx:id="discountField" promptText="0" prefWidth="80"
                                           style="-fx-background-color: white; -fx-border-color: #dee2e6; -fx-font-size: 16px; -fx-alignment: center-right;" />
                            </HBox>
                            
                            <HBox alignment="CENTER_LEFT" spacing="8">
                                <Label text="Cash:" style="-fx-font-size: 16px; -fx-text-fill: #34495e;" />
                                <Region HBox.hgrow="ALWAYS" />
                                <TextField fx:id="cashField" promptText="0.00" prefWidth="140"
                                           style="-fx-background-color: white; -fx-border-color: #dee2e6; -fx-font-size: 16px; -fx-alignment: center-right;" />
                            </HBox>
                            
                            <HBox alignment="CENTER_LEFT">
                                <Label text="Change:" style="-fx-font-size: 16px; -fx-text-fill: #34495e;" />
                                <Region HBox.hgrow="ALWAYS" />
                                <Label fx:id="changeLabel" text="â‚±0.00"
                                       style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #e67e22;" />
                            </HBox>
                            
                            <Separator style="-fx-background-color: #bdc3c7;" />
                            
                            <HBox alignment="CENTER_LEFT">
                                <Label text="TOTAL:" style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" />
                                <Region HBox.hgrow="ALWAYS" />
                                <Label fx:id="totalAmountLabel" text="â‚±0.00" 
                                       style="-fx-font-size: 32px; -fx-font-weight: bold; -fx-text-fill: #27ae60;" />
                            </HBox>
                        </VBox>

                        <HBox spacing="10">
                            <Button text="ðŸ—‘ï¸ Clear Cart" onAction="#clearCart" prefHeight="45" HBox.hgrow="ALWAYS" maxWidth="Infinity"
                                    style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold; -fx-cursor: hand;" />
                            <Button text="âœ… Complete Sale" onAction="#completeSale" prefHeight="45" HBox.hgrow="ALWAYS" maxWidth="Infinity"
                                    style="-fx-background-color: linear-gradient(to right, #27ae60, #229954); -fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold; -fx-cursor: hand;" />
                        </HBox>
                    </VBox>
                </HBox>
            </VBox>
        </content>
    </ScrollPane>
</AnchorPane>